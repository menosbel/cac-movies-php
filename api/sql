# drop table peliculas.peliculas ;

create table peliculas (
id int auto_increment primary key,
titulo varchar (100),
fecha_lanzamiento date,
genero varchar(50),
duracion varchar(20),
director varchar(50),
reparto varchar(100),
sinopsis varchar(200)
);



insert into peliculas (titulo, fecha_lanzamiento, genero, duracion, director, reparto, sinopsis)
